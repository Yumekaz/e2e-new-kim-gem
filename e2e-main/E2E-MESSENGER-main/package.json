{
  "name": "e2e-encrypted-messenger",
  "version": "3.0.0",
  "description": "End-to-end encrypted messaging with authentication, file upload, and SQLite persistence",
  "main": "server-enhanced.js",
  "scripts": {
    "start": "node server-enhanced.js",
    "start:legacy": "node server-sqlite.js",
    "start:memory": "node server.js",
    "dev": "nodemon server-enhanced.js",
    "dev:legacy": "nodemon server-sqlite.js",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "setup": "npm run install-all && npm run build",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/ --coverage",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:debug": "npx playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "playwright:install": "npx playwright install chromium"
  },
  "keywords": [
    "e2e",
    "encryption",
    "messenger",
    "chat",
    "secure",
    "sqlite",
    "jwt",
    "authentication",
    "file-upload",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.6.1",
    "sql.js": "^1.10.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
